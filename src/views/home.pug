  //- Contact section
  //- TODO: Mail to 6ow3idgirl@gmail.com
  #contact.text-center
    .container
      .section-title.center
        h2 CONTACT
        hr

      //- .col-md-8.col-md-offset-2
      //-   h3
      //-     |Get tickets from #[a(href='https://forms.gle/qJMCXeGp9dRbS8nE9') Here]
      .col-md-8.col-md-offset-2
        .social
          ul
            li #[a(href='https://twitter.com/6ow3idgirl', target="_blank", rel="noopener noreferrer") #[i.fab.fa-3x.fa-twitter]]
            li #[a(href='https://t.co/n3i6Ulx4Gk?amp=1', target="_blank", rel="noopener noreferrer") #[i.fab.fa-3x.fa-instagram]]
            li #[a(href='https://www.facebook.com/6ow3idgirl/', target="_blank", rel="noopener noreferrer") #[i.fab.fa-3x.fa-facebook]]
            li #[a(href='https://lin.ee/m30atuE', target="_blank", rel="noopener noreferrer") #[i.fab.fa-3x.fa-line]]
        .contact-form
          form(id='contactForm', name='sentMessage', novalidate)
            .row
              .col-md-6
                .form-group
                  input(id='name', class='form-control', type='text', placeholder='YourName', required='required')
                  p.help-block.text-danger
              .col-md-6
                .form-group
                  input(id='email', class='form-control', type='email', placeholder='Email', required='required')
                  p.help-block.text-danger
            .form-group
              textarea(id='message', class='form-control', name='message', rows='4', placeholder='Message Here ...', required)
              p.help-block.text-danger
            #success
            button(type='submit', class='btn btn-default') Send Message
